            adapter_arg = '--adapter_sequence {} --adapter_sequence_r2 {} '.format(ADAPTER, ADAPTER2) if ADAPTER else '--detect_adapter_for_pe ',
            kit_args = LIBPREP.get('paired_end',{}).get('fastp', {}).get('params') or ''
        threads:
            3
        singularity:
            'docker://' + config['docker']['fastp']
        shell:
