            log_json = join(FILTER_INTERIM, 'merged_fastq', 'trimmed', 'fastp', 'qc', '{sample}.json')
        threads:
            3
        params:
            args = '--overrepresentation_analysis --overrepresentation_sampling 10000 -A -Q -L -G '
